{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "PORT",
        "NODE_ENV",
        "ACCESS_PUBLIC_KEY",
        "ACCESS_PRIVATE_KEY",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "SERVER_URL",
        "DOMAIN_NAME",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "S3_BUCKET_NAME",
        "S3_BUCKET_REGION",
        "S3_BUCKET_ACCESS_KEY",
        "S3_BUCKET_SECRET",
        "CLIENT_URL",
        "VITE_BACKEND_URL"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:push-reset": {
      "cache": false
    }
  }
}
